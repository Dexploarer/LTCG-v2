{
  "name": "@lunchtable-tcg/story",
  "version": "0.1.0",
  "description": "Story system: chapters, stages, progress, and battle attempts",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "@convex-dev/component-source": "./src/client/index.ts",
        "types": "./src/client/index.ts",
        "default": "./src/client/index.ts"
      }
    },
    "./convex.config": {
      "import": {
        "@convex-dev/component-source": "./src/component/convex.config.ts",
        "types": "./src/component/convex.config.ts",
        "default": "./src/component/convex.config.ts"
      }
    },
    "./convex.config.js": {
      "types": "./src/component/convex.config.ts",
      "default": "./src/component/convex.config.ts"
    }
  },
  "scripts": {
    "build": "tsc --project ./tsconfig.build.json",
    "dev:build": "tsc --project ./tsconfig.build.json --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "convex": "^1.24.8"
  },
  "devDependencies": {
    "convex": "^1.31.6",
    "convex-helpers": "^0.1.77",
    "typescript": "^5.7.3"
  },
  "files": ["dist", "src"],
  "types": "./dist/client/index.d.ts",
  "module": "./dist/client/index.js",
  "keywords": ["tcg", "convex", "component", "story", "campaign"]
}
