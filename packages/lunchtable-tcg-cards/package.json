{
  "name": "@lunchtable-tcg/cards",
  "version": "0.1.0",
  "description": "Card definitions, player inventory, and deck management component",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/client/index.d.ts",
      "@convex-dev/component-source": "./src/client/index.ts",
      "import": "./src/client/index.ts",
      "default": "./dist/client/index.js"
    },
    "./convex.config": {
      "types": "./dist/component/convex.config.d.ts",
      "@convex-dev/component-source": "./src/component/convex.config.ts",
      "import": "./src/component/convex.config.ts",
      "default": "./dist/component/convex.config.js"
    },
    "./convex.config.js": {
      "types": "./src/component/convex.config.ts",
      "default": "./src/component/convex.config.ts"
    }
  },
  "scripts": {
    "build": "tsc --project ./tsconfig.build.json",
    "dev:build": "tsc --project ./tsconfig.build.json --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "convex": "^1.24.8"
  },
  "devDependencies": {
    "convex": "^1.31.6",
    "typescript": "^5.7.3"
  },
  "files": ["dist", "src"],
  "types": "./dist/client/index.d.ts",
  "module": "./dist/client/index.js",
  "keywords": ["tcg", "convex", "component", "card-game", "cards", "decks"]
}
